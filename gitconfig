[color]
	diff = auto
[alias]
	st = status
	ss = status --short
	co = checkout
	cb = checkout --branch
	aa = add --all --verbose
	df = diff
	dc = diff --cached
	ls = log --color --graph --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	up = "!git remote update -p; git merge --ff-only @{u}"
	rgrep = "!git ls-remote | grep --color=always -i "
[core]
