[include]
    path = ~/.gitconfig_local

[alias]
    aa = add --all --verbose
    cb = checkout --branch
    co = checkout
    dc = diff --cached
    df = diff
    ls = log --color --graph --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset%Cgreen gpg/%G? %GK %GS%Creset' --abbrev-commit
    rain = rebase --autosquash --interactive
    ss = show --show-signature
    st = status
    sts = status --short
    up = "!git remote update -p; git merge --ff-only @{u}"

[commit]
    gpgsign = true

[core]
    preloadindex = true
    deltabasecachelimit = 4g
    excludesfile = ~/.gitignore_global
    page = delta
    editor = vim

[delta]
    navigate = true

[diff]
    colorMoved = default

[feature]
    manyfiles = true

[fetch]
    prune = true

[help]
    autocorrect = 1

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

[push]
    default = simple

[branch "main"]
    mergeoptions = --no-ff

[branch "master"]
    mergeoptions = --no-ff
[init]
	defaultBranch = main
